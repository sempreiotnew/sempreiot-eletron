{
  "name": "sempreiot-electron",
  "productName": "Sempre IoT - Alarmes",
  "version": "1.0.0",
  "description": "SempreIOT cross-platform Electron app",
  "main": "main.js",
  "author": {
    "name": "Talles Rocha",
    "email": "talles@talontech.com.br"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.sempreiot.app",
    "productName": "sempreiot",
    "files": [
      "**/*",
      "!node_modules/.cache/**",
      "!dist/**"
    ],
    "mac": {
      "icon": "icon.icns",
      "category": "public.app-category.utilities",
      "identity": "TALLES AUGUST0 FERREIRA DA ROCHA (AMSA346LX4)",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "logo_no_shadow.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "logo_no_shadow_512x512.ico",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "mqtt": "^5.3.4",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  }
}
