{
  "name": "sempreiot-electron",
  "version": "1.0.0",
  "description": "SempreIOT cross-platform Electron app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.sempreiot.app",
    "productName": "sempreiot",
    "files": [
      "**/*",
      "!node_modules/.cache/**"
    ],
    "mac": {
      "icon": "logo_no_shadow_512x512.ico",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "logo_no_shadow.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "logo_no_shadow_512x512.ico",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "mqtt": "^5.3.4",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3"
  }
}
